.page {
  display: flex;
  flex-direction: column;
  align-items: center;

  .page-header {
    background-color: #282c34;
    min-height: 20vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    width: 100%;
  }

  .page-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin: 1em;
  }
}
